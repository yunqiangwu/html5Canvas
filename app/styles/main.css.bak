.browserupgrade {
  margin: 0.2em 0;
  background: #ccc;
  color: #000;
  padding: 0.2em 0;
}

html,body{
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
}

/* Everything but the jumbotron gets side spacing for mobile first views */
.header,
.marketing,
.footer {
  padding-right: 1rem;
  padding-left: 1rem;
}

/* Custom page header */
.header {
  border-bottom: .05rem solid #e5e5e5;
  margin-bottom: 2px;
  height: 3rem;
}

/* Make the masthead heading the same height as the navigation */
.header h3 {
  margin-top: 0;
  margin-bottom: 0;
  line-height: 3rem;
  display: inline-block;
}


/* Main marketing message and sign up button */
.main-canvas-container {
  position: absolute;
  top: 3rem;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
}
.main-canvas-container .btn {
  padding: .75rem 1.5rem;
  font-size: 1.5rem;
}



#container{
  width: 100%;
  height: 100%;
  padding: 0;
  position: relative;
}

.main-canvas-container {
  width: 100%;
  height: 100%;
  top: 0px;
  position: relative;
  overflow: hidden;
  background: gray;

  cursor: pointer;

}

.main-canvas-container .canvas-wrap{

  position: absolute;
  top: 0;
  left: 0;
  border: 20px gray solid ;
  /* transform: translate(-50%, -50%); */
}
.main-canvas-container canvas {
  overflow: auto;
  background: white;
}

.tinytip {
    background: #eee;
    border: 1px solid #ccc;
    padding: 10px;
    border-radius: 8px;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    position: relative;
    width: 200px;
    font-size: 12px;
}